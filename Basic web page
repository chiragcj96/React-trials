<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    <script crossorigin src="https://unpkg.com/react@16/umd/react.development.js"></script>         <!--core react library-->
    <script crossorigin src="https://unpkg.com/react-dom@16/umd/react-dom.development.js"></script>         <!--REact DOM library-->
    <title>Document</title>
</head>
<body>
    <div id="app"></div>
    <!--Now we create a component in JavaScript-->
    <script type="text/babel">
        class App extends React.Component {         //To create a component we will use JS classes here, 
          render(){
            return(                                 //It can have only one root element here which is <div>
              <div className="app-content">         {/*here class='Id' can't be used as it is */}
                <h1>Hello, React App welcomes you!</h1>
                <p>Random number: { Math.random() * 10 }</p>            {/*Here, we can't directly write text, but need to write in brackets telling it is JSX and nees to be dynamically rendered */}
              </div>
            )
          }
        }
        ReactDOM.render(<App />, document.getElementById('app'));           //It tells DOM to render component 'App' for the body
      </script>
</body>
</html>
